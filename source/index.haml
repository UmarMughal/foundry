%header.page-header
  .page-header-container
    = partial "partials/navigation"
    %h1.header-logo
      Foundry âˆž
    %h2.header-subtitle
      Providing a new generation of vector assets and infinite possibility for the interactive web and mobile applications
      = link_to "more", "#description", class: "subtitle-linktodescription"

    %p.header-description
      = partial "partials/description"
    %button.header-linktogallery{ name: "gallery"}
      Gallery
%section.page-section
%main{role:"main"}
  %section.page-section
    %h2 Families
    %ol
      - data.library.families.each do |title, family|
        %li
          %h3
            = family["title"]
          %h6
            %a{ href: family.repourl}
              GitHub
          %p
            = family["description"]
          %ul
            - family.lib.each do |filename|
              %li
                %img{ src: "assets/components" + family.path + filename}
                %a{ href: "assets/components" + family.path + filename, download: true}
                  Download
